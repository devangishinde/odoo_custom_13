<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		
		<record id="res_partner_company_new" model="res.partner">
			<field name="name">My New Company</field>
			<field name="is_company">1</field>
			<field eval="1" name="active"/>
			<field name="street">90 Streets Avenue</field>
			<field model="res.country" name="country_id" search="[('code','ilike','us')]"/>
			<field model="res.country.state" name="state_id" search="[('code','ilike','il')]"/>
			<field name="zip">380051</field>
			<field name="city">Chicago</field>
			<field name="email">new@yourcompany.com</field>
			<field name="phone">+1 312 349 3030</field>
			<field name="website">www.newyourcompany.com</field>
			<field name="company_id" eval="False"/>
		</record>
		
		<record id="res_company_new" model="res.company">
			<field name="currency_id" ref="base.USD"/>
			<field name="partner_id" ref="res_partner_company_new"/>
			<field name="name">My New Company</field>
			<field name="user_ids" eval="[(4, ref('base.user_admin')), (4, ref('base.user_demo'))]"/>
		</record>
		
	</data>
</odoo>